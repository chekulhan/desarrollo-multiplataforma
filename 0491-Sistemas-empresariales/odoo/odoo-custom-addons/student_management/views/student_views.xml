<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="name"/>
                        <field name="age"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view -->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student.list</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="student_id"/>
                <field name="name"/>
                <field name="age"/>
            </list>
        </field>
    </record>


    <!-- Action FIRST, before menuitems -->
    <record id="action_student_management" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_student_root" name="Student Management" sequence="5"/>
    <menuitem
        id="menu_student"
        name="Students"
        parent="menu_student_root"
        action="student_management.action_student_management"
        web_icon="student_management,static/description/icon.png"/>
</odoo>
